<div class="container">
  <div class="row">
    <p><%= profile_img(@user) %></p>
    <p><%= @user.name %></p>
  </div>

  <div class="row">
    <h2>フォロ一覧</h2>
    <% @user.followed_users.each do |user| %>
      <div class="container-child col-md-2 col-sm-4 col-xs-6">
        <p><%= profile_img(user) %></p>
        <p><%= user.name %></p>
      </div>
    <% end %>
  </div>

  <div class="row">
    <h2>フォロワー一覧</h2>
    <% @user.followers.each do |user| %>
      <div class="container-child col-md-2 col-sm-4 col-xs-6">
        <p><%= profile_img(user) %></p>
        <p><%= user.name %></p>
      </div>
    <% end %>
  </div>
</div>
